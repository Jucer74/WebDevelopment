@model FrontendBmxAspMVC.Models.User

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h4>Delete User</h4>
    <hr/>
    <p class="text-danger">Are you sure you want to delete this?</p>
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <tbody>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Username)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Password)
                </td>
            </tr>
            </tbody>
        </table>

        <form asp-action="Delete">
            <div class="row w-25">
                <input type="hidden" asp-for="Id"/>
                <input type="submit" value="Delete" class="btn btn-danger col"/>
            </div>
            <div class="row w-25">
                <a asp-action="Index" class="btn btn-warning col mt-1">Back to List</a>
            </div>
        </form>
    </div>
</div>