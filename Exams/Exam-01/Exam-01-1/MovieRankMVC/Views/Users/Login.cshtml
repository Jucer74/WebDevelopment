﻿
@model MovieRankMVC.Models.User

@{
    ViewData["Title"] = "Movie Rank";
}

<div class="d-flex justify-content-center min-vh-60">
    <div class="card" style="max-width: 600px; margin: auto;">
        <div class="card-body">
            <div class="d-flex justify-content-center mb-4">
                <img src="~/images/Logo.jpg" alt="Profile Image" class="rounded-circle" style="width: 100px; height: 100px; object-fit: cover;" />
            </div>


            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }

            <h5 class="card-title text-center">@ViewData["Title"]</h5>
            <hr class="my-4">
            <form asp-action="Login" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="UserEmail" class="form-label">Email</label>
                    <input type="email" asp-for="UserEmail" class="form-control" required />
                    <div class="invalid-feedback">
                        Please provide a valid email.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input type="password" asp-for="Password" class="form-control" required />
                    <div class="invalid-feedback">
                        Please provide a password.
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="Register" class="btn btn-secondary">Register</a>
            </div>
        </div>
    </div>
</div>