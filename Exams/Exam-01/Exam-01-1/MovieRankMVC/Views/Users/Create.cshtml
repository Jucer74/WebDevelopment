@model MovieRankMVC.Models.User



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Registration Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
          crossorigin="anonymous">
    <style>
        header {
            display: none;
        }

        footer {
            display: none;
        }

        .error-message {
            font-size: 0.8em;
            color: red;
        }
    </style>
    <script defer src="https://app.embed.im/snow.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body class="bg-dark d-flex justify-content-center align-items-center vh-100">
    <div class="bg-white p-5 rounded-5 text-secondary shadow" style="width: 25rem; margin: 0 auto;">
        <div class="d-flex justify-content-center">
            <img src="~/images/Iconmovie.jpg" alt="Popcorn Logo" style="width: 100px; height: 10px; margin-right: 3px;">

        </div>
        <div class="text-center fs-1 fw-bold">MovieRank</div>

        <form asp-controller="Users" asp-action="Create" method="post">
            <div class="input-group mt-3">
                <span class="input-group-text bg-dark">
                    <i class="fas fa-envelope text-white"></i>
                </span>
                <input class="form-control bg-light"
                       type="text"
                       name="UserEmail"
                       placeholder="Email"
                       asp-for="UserEmail">
                <span asp-validation-for="UserEmail" class="text-danger error-message"></span>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-dark">
                            <i class="fas fa-user text-white"></i>
                        </span>
                        <input class="form-control bg-light"
                               type="text"
                               name="FirstName"
                               placeholder="First Name"
                               asp-for="FirstName">
                        <span asp-validation-for="FirstName" class="text-danger error-message"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-dark">
                            <i class="fas fa-user text-white"></i>
                        </span>
                        <input class="form-control bg-light"
                               type="text"
                               name="LastName"
                               placeholder="Last Name"
                               asp-for="LastName">
                        <span asp-validation-for="LastName" class="text-danger error-message"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mt-3">
                <span class="input-group-text bg-dark">
                    <i class="fas fa-key text-white"></i>
                </span>
                <input class="form-control bg-light"
                       type="password"
                       name="Password"
                       placeholder="Password"
                       asp-for="Password">
                <span asp-validation-for="Password" class="text-danger error-message"></span>
            </div>
            <div class="input-group mt-3">
                <span class="input-group-text bg-dark">
                    <i class="fas fa-key text-white"></i>
                </span>
                <input class="form-control bg-light"
                       type="password"
                       name="ConfirmPassword"
                       placeholder="Confirm Password"
                       asp-for="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword" class="text-danger error-message"></span>
            </div>
            <button class="btn btn-dark text-white w-100 mt-4 fw-semibold shadow-sm" type="submit">
                Register
            </button>
            <div class="d-flex justify-content-center">
                <a asp-action="Login" class="text-decoration-none text-info fw-semibold">Cancelar</a>
            </div>
        </form>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
