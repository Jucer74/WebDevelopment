@model MovieRankMVC.Models.Movie

@{
    ViewData["Title"] = "Delete";
}
<script>
    function confirmDelete() {
        if (confirm("Are you sure you want to delete this movie?")) {
            return true; // Continuar con el envío del formulario
        }
        return false; // Cancelar el envío del formulario
    }
</script>
<style>
    header, footer {
        display: none;
    }
</style>


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h1 class="text-center">Delete Movie</h1>
                </div>
                <div class="card-body border border-dark">
                    <img src="@Url.Content(Model.Poster)" class="img-fluid rounded" />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Id)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Id)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Title)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Title)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Synopsis)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Synopsis)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Year)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Year)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Duration)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Duration)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Rate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Rate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Poster)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Poster)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Genres)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Genres)
                        </dd>
                    </dl>

                    <form asp-action="Delete" onsubmit="return confirmDelete();">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-danger d-inline-block">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>