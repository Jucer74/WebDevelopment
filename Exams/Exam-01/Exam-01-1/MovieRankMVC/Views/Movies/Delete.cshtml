
@model MovieRankMVC.Models.Movie

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="~/css/stylecreate.css" />
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>Delete Movie</h1>
        </div>
        <div class="movie-form-container">
            <!-- Image Preview Section -->
            <div class="form-section">
                <img id="imagePreview" src="~/images/@Model.Poster" alt="Poster Image Preview" />
            </div>

            <!-- Details Section -->
            <div class="form-section">
                <h3>Are you sure you want to delete this movie?</h3>
                <dl class="row">
                                        <div class="col-sm-2">
                                            <dt class="details-label">@Html.DisplayNameFor(model => model.Id)</dt>
                                        </div>
                                        <div class="col-sm-10">
                                            <dd class="details-value">@Html.DisplayFor(model => model.Id)</dd>
                                        </div>

                                        <div class="col-sm-2">
                                            <dt class="details-label">@Html.DisplayNameFor(model => model.Title)</dt>
                                        </div>
                                        <div class="col-sm-10">
                                            <dd class="details-value">@Html.DisplayFor(model => model.Title)</dd>
                                        </div>

                                        <div class="col-sm-2">
                                            <dt class="details-label">@Html.DisplayNameFor(model => model.Synopsis)</dt>
                                        </div>
                                        <div class="col-sm-10">
                                            <dd class="details-value">@Html.DisplayFor(model => model.Synopsis)</dd>
                                        </div>

                                        <div class="col-sm-2">
                                            <dt class="details-label">@Html.DisplayNameFor(model => model.Year)</dt>
                                        </div>
                                        <div class="col-sm-10">
                                            <dd class="details-value">@Html.DisplayFor(model => model.Year)</dd>
                                        </div>

                                        <div class="col-sm-2">
                                            <dt class="details-label">@Html.DisplayNameFor(model => model.Duration)</dt>
                                        </div>
                                        <div class="col-sm-10">
                                            <dd class="details-value">@Html.DisplayFor(model => model.Duration)</dd>
                                        </div>

                                        <div class="col-sm-2">
                                            <dt class="details-label">@Html.DisplayNameFor(model => model.Rate)</dt>
                                        </div>
                                        <div class="col-sm-10">
                                            <dd class="details-value">@Html.DisplayFor(model => model.Rate)</dd>
                                        </div>

                                        <div class="col-sm-2">
                                            <dt class="details-label">@Html.DisplayNameFor(model => model.Poster)</dt>
                                        </div>
                                        <div class="col-sm-10">
                                            <dd class="details-value">@Html.DisplayFor(model => model.Poster)</dd>
                                        </div>

                                        <div class="col-sm-2">
                                            <dt class="details-label">@Html.DisplayNameFor(model => model.Genres)</dt>
                                        </div>
                                        <div class="col-sm-10">
                                            <dd class="details-value">@Html.DisplayFor(model => model.Genres)</dd>
                                        </div>
                            
                </dl>
                
                <form asp-action="Delete">
                    <input type="submit" value="Delete" class="btn btn-danger btn-delete" />
                    <a asp-action="Index" class="btn-create"><i class="fas fa-arrow-left"></i> Back to List</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
