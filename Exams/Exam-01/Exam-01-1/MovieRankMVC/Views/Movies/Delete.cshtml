@model MovieRankMVC.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1>Delete</h1>

    <h4>Are you sure you want to delete this movie?</h4>
    <hr />

    <div class="table-responsive">
        <h4>Movie</h4>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <td>@Html.DisplayFor(model => model.Title)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Synopsis)</th>
                    <td>@Html.DisplayFor(model => model.Synopsis)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Year)</th>
                    <td>@Html.DisplayFor(model => model.Year)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Duration)</th>
                    <td>@Html.DisplayFor(model => model.Duration)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Rate)</th>
                    <td>@Html.DisplayFor(model => model.Rate)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Poster)</th>
                    <td>@Html.DisplayFor(model => model.Poster)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Genres)</th>
                    <td>@Html.DisplayFor(model => model.Genres)</td>
                </tr>
            </tbody>
        </table>
    </div>

    <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<!-- Modal de confirmación -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this movie?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <!-- Agregar formulario para enviar la solicitud de eliminación -->
                <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
