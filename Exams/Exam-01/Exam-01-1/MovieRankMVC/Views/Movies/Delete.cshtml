@model MovieRankMVC.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<style>
    header, footer {
        display: none;
    }

    body {
        background-color: #212529
    }
</style>


<div class="container mt-5 bg-dark">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h1 class="text-center">Delete Movie</h1>
                </div>
                <div class="card-body border border-dark bg-warning">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Id)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Id)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Title)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Title)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Synopsis)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Synopsis)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Year)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Year)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Duration)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Duration)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Rate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Rate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Poster)
                        </dt>
                        <dd class="col-sm-10">
                            <img src="@Url.Content(Model.Poster)" class="img-fluid rounded" />
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Genres)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Genres)
                        </dd>
                    </dl>

                    <<form asp-action="Delete" onsubmit="return confirmDelete();">
                        <input type="submit" value="Delete" class="btn btn-danger" /> 
                        <a asp-action="Index" class="btn btn-success d-inline-block">Cancel</a>
                    </form>


                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function confirmDelete() {
        var result = confirm("Are you sure you want to delete this movie?");
        if (result) {
            document.querySelector('form').submit();
        }
    }
</script>