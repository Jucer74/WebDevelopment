@model MovieRankMVC.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1>Details</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <td>@Html.DisplayFor(model => model.Id)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <td>@Html.DisplayFor(model => model.Title)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Synopsis)</th>
                <td>@Html.DisplayFor(model => model.Synopsis)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Year)</th>
                <td>@Html.DisplayFor(model => model.Year)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Duration)</th>
                <td>@Html.DisplayFor(model => model.Duration)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Rate)</th>
                <td>@Html.DisplayFor(model => model.Rate)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Poster)</th>
                <td>@Html.DisplayFor(model => model.Poster)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Genres)</th>
                <td>@Html.DisplayFor(model => model.Genres)</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

