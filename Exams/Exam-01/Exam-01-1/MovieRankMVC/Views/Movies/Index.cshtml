﻿
@model IEnumerable<MovieRankMVC.Models.Movie>

@{
    ViewData["Title"] = "CRUD";
}
<head>
    <link rel="stylesheet" href="/MovieRankMVC/Views/Shared/stylesMovies.css">
</head>
<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Poster</th>
                    <th>Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td class="poster-cell">
                                <div class="poster-container">
                                    <img src="https://localhost:5001/images/@item.Poster" alt="Poster" class="poster-image" />
                                </div>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td class="button-cell">
                                <div class="button-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    /* Estilos base */
    .poster-cell {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .poster-container {
        width: 100px;
        height: 150px;
        margin: 0 auto;
        position: relative;
    }

    .poster-image {
        max-width: 100%;
        max-height: 100%;
        position: absolute;
        inset: 0; /* shorthand for top, right, bottom, left */
        margin: auto;
    }

    .button-cell {
        display: flex;
        align-items: center;
    }

    .button-group {
        display: flex;
        gap: 10px;
        align-items: center;
    }

</style>