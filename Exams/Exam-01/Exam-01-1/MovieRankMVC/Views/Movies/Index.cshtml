@model IEnumerable<MovieRankMVC.Models.Movie>

@{
    ViewData["Title"] = "Movie CRUD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="~/css/stylecrud.css" />
</head>

<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-8 col-md-6 col-sm-12">
                <h1 class="titulo">Movies CRUD</h1>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12 text-right">
                <button class="btn btn-primary"><a asp-action="Create" class="text-white"><i class="fas fa-plus"></i> Create New</a></button>
            </div>
        </div>
        <div class="row mt-4  justify-content-center">
            <div class="col-8" >
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th>Poster</th>
                            <th>Title</th>
                            
                            <th>Rate</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="~/images/@item.Poster" alt="Poster" class="poster-img" /></td>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                
                                <td>@Html.DisplayFor(modelItem => item.Rate)</td>
                                <td>
                                    <div class="actions">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info mr-2"><i class="fas fa-edit"></i> Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary mr-2"><i class="fas fa-info-circle"></i> Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
