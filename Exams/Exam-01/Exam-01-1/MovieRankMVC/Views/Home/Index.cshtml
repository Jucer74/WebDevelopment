@model List<MovieRankMVC.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Home</h1>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count(); i += 3)
        {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="row">
                    @for (int j = i; j < Math.Min(i + 3, Model.Count()); j++)
                    {
                        var movie = Model[j];
                                <div class="col-md-4">
                                    <div class="card h-100">
                                        <div class="aspect-ratio-container">
                                            <div class="aspect-ratio-content">
                                                <div class="image-container" style="background-image: url('https://localhost:5001/images/@movie.Poster');"></div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">@movie.Title</h5>
                                            <p class="card-text">Rate: @movie.Rate</p>
                                            <a href="#" class="btn btn-primary">Details</a>
                                        </div>
                                    </div>
                                </div>
                    }
                    </div>
                </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>

@section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            $(document).ready(function () {
                console.log("Carousel initialized");
                $('.carousel').carousel();
            });
        </script>
}

<style>
    .carousel-control-prev, .carousel-control-next {
        margin: 0;
        width: auto;
        color: black;
        background: none;
    }

    .carousel-control-prev {
        left: -50px; /* Ajusta la posición izquierda */
    }

    .carousel-control-next {
        right: -50px; /* Ajusta la posición derecha */
    }

    .card {
        margin: 0.5em;
        box-shadow: 2px 6px 8px 0 rgba(22, 22, 26, 0.18);
        border: none;
    }

    .carousel-inner {
        padding: 1em;
    }

    .aspect-ratio-container {
        position: relative;
        width: 100%;
        padding-bottom: 150%; /* 2:3 Aspect Ratio */
        overflow: hidden;
    }

    .aspect-ratio-content {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }

    .image-container {
        width: 100%;
        height: 100%;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }
</style>
