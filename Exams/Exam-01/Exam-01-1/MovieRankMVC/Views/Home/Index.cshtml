@model IEnumerable<MovieRankMVC.Models.Movie>

@{
    ViewData["Title"] = "Movie CRUD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        body {
            background-color: #001f3f; /* Azul oscuro */
        }

        .carousel-inner {
            display: flex;
            flex-wrap: nowrap;
        }

        .carousel-item {
            flex: 0 0 100%; /* Para que ocupe todo el ancho */
            max-width: 100%;
        }

        .movie-card {
            display: flex;
            flex-direction: column;
        }

        .card-img-top {
            width: 100%; /* Ancho completo */
            object-fit: cover; /* Ajusta la imagen para que llene el espacio sin deformarse */
        }

        .card-body {
            flex-shrink: 0; /* Evita que se reduzca */
        }

        .progress.rating-bar {
            height: 25px;
            border-radius: 5px;
            background-color: #e0e0e0;
            overflow: hidden;
        }

        .progress-bar.filled-rating {
            font-weight: bold;
            text-align: center;
            background-color: #007bff; /* Color azul para la barra de progreso llena */
            color: white; /* Texto en color blanco para contrastar */
            transition: width 0.5s; /* Transición suave de la anchura */
        }

            .progress-bar.filled-rating:hover {
                background-color: #0056b3; /* Color azul más oscuro al pasar el cursor */
            }

            .progress-bar.filled-rating span {
                position: absolute;
                left: 50%;
                top: 50%;
                transform: translate(-50%, -50%);
            }


        .btn-spacing {
            margin-top: 10px;
        }

    </style>
</header>

<div class="carousel slide" data-ride="carousel" id="movieCarousel">
    <div class="carousel-inner">

        @for (int i = 0; i < Model.Count(); i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <div class="d-flex justify-content-center align-items-center row no-gutters" style="min-height: 100vh; background-color: rgba(0,0,0,0.5);">
                    @for (int j = 0; j < 3 && i + j < Model.Count(); j++)
                    {
                        var movie = Model.ElementAt(i + j);
                        <div class="card movie-card mx-2 col-lg-4 col-md-6 col-sm-12 mb-4">
                            <img class="card-img-top" src="~/images/@movie.Poster" alt="@movie.Title">
                            <div class="card-body">
                                <h5 class="card-title">@movie.Title</h5>

                                <p class="card-text">Rating: @movie.Rate</p>


                                <div class="progress rating-bar">
                                    <div class="progress-bar filled-rating" role="progressbar" style="width: @(movie.Rate * 10)%;" aria-valuenow="@(movie.Rate * 10)" aria-valuemin="0" aria-valuemax="100">
                                        <span class="sr-only">@movie.Rate</span>
                                        @movie.Rate
                                    </div>
                                </div>


                                <a href="@Url.Action("Details", "Movies", new { id = movie.Id })" class="btn btn-primary btn-spacing">View Details</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
            i += 2; // Incrementamos en 2 ya que ya hemos procesado 3 elementos en total
        }

    </div>

    <a class="carousel-control-prev" href="#movieCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#movieCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
