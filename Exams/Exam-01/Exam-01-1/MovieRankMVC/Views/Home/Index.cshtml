@model IEnumerable<MovieRankMVC.Models.Movie>

@{
    ViewData["Title"] = "Movie CRUD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        body {
            background-color: #001f3f; /* Azul oscuro */
        }

        .carousel-inner {
            display: flex;
            flex-wrap: nowrap;
        }

        .carousel-item {
            flex: 0 0 100%; /* Para que ocupe todo el ancho */
            max-width: 100%;
        }

        .movie-card {
            display: flex;
            flex-direction: column;
        }

        .card-img-top {
            width: 100%; /* Ancho completo */
            object-fit: cover; /* Ajusta la imagen para que llene el espacio sin deformarse */
        }

        .card-body {
            flex-shrink: 0; /* Evita que se reduzca */
        }

        .progress {
            background-color: #f5f5f5;
        }

        .progress-bar {
            transition: width 0.6s ease;
        }

        .btn-spacing {
            margin-top: 10px;
        }

    </style>
</header>

<div class="carousel slide" data-ride="carousel" id="movieCarousel">
    <div class="carousel-inner">

        @for (int i = 0; i < Model.Count(); i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <div class="d-flex justify-content-center align-items-center row no-gutters" style="min-height: 100vh; background-color: rgba(0,0,0,0.5);">
                    @for (int j = 0; j < 3 && i + j < Model.Count(); j++)
                    {
                        var movie = Model.ElementAt(i + j);
                        <div class="card movie-card mx-2 col-lg-4 col-md-6 col-sm-12 mb-4">
                            <img class="card-img-top" src="~/images/@movie.Poster" alt="@movie.Title">
                            <div class="card-body">
                                <h5 class="card-title">@movie.Title</h5>

                                <p class="card-text">Rating: @movie.Rate</p>


                                <!-- Barra de progreso para el rating -->
                                <div class="progress ">
                                    @{
                                        double progressBarPercentage = 0;
                                        if (movie.Rate >= 0 && movie.Rate <= 10)
                                        {
                                            progressBarPercentage = (movie.Rate / 10.0) * 100;
                                        }
                                        <div class="progress-bar" role="progressbar" style="width: @progressBarPercentage%;" aria-valuenow="@progressBarPercentage" aria-valuemin="0" aria-valuemax="100">
                                            @String.Format("{0:0.##}%", progressBarPercentage)
                                        </div>
                                    }
                                </div>
                                <a href="@Url.Action("Details", "Movies", new { id = movie.Id })" class="btn btn-primary btn-spacing">View Details</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
            i += 2; // Incrementamos en 2 ya que ya hemos procesado 3 elementos en total
        }

    </div>

    <a class="carousel-control-prev" href="#movieCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#movieCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
