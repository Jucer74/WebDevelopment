@{
    ViewData["Login"] = "Login";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de sesion</title>
    <link rel="stylesheet" href="./css/styles.css">
    <!-- Enlace al archivo CSS de Bootstrap (desde un CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-lg bg-dark text-white">
        <div class="row justify-content-center">
            <div class="logo-header">
                <img src="@Url.Content("~/img/logo.jpeg")" alt="Mi Imagen">

            </div>
            <div class="col-md-6" id="login-form">
                <h2 class="mb-4">Iniciar sesion</h2>
                
                <form action="Home
">
                  



                    <div class="mb-3">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" id="email" placeholder="nombre@ejemplo.com" required>
                    </div>
                    <div class="mb-4">
                        <label for="password" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="password" required>
                    </div>
                    <div class="container">
                       
                        <div class="left-div"> 
                            <button type="submit" class="btn btn-primary ">Iniciar sesion </button>
                        </div> 
                        <div class="form-check right-div">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                            <label class="form-check-label" for="flexCheckChecked">
                                Remember me
                            </label>
                        </div>
                    </div>

                </form>
               
                <p class="mt-3">
                    ¿todavia no tienes una cuenta?  <a class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
                                                       id="btn-register" data-bs-toggle="modal" data-bs-target="#myModal" data-title="Register">Register</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Modal HTML -->
    <div id="myModal" class="modal fade" data-bs-backdrop="static" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-white">
                <div class="modal-header">
                    <div class="modal-body">
                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label" for="EmailAddress">Email Address:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="EmailAddress" placeholder="Email Address" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="row-cols-xxl-2col-form-label" for="firstName">First Name:</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="firstName" placeholder="First Name" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="row-cols-xxl-2col-form-label" for="lastName">Last Name:</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control"  id="lastName" placeholder="Last Name" required>
                            </div>
                           

                        </div>
                        <div class="row mb-2">
                            <label class="row-cols-xxl-2col-form-label" for="password">Password:</label>
                            <div class="col-sm-6">
                                <input type="password" class="form-control" id="password" placeholder="Password" required>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <label class="row-cols-xxl-2col-form-label" for="confirm_password">Confirm password:</label>
                            <div class="col-sm-6">
                                <input type="password" class="form-control" id="confirm_password" placeholder="Confirm password" required>
                            </div>
                        </div>
                        

                            <div class="modal-footer justify-content-center">

                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-primary">Registrarme</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <!-- Enlace al archivo JS de Bootstrap (desde un CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


