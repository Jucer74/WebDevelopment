

@{
    ViewData["Title"] = "Home";
}

<body class = "row">
    <header class="w-100">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img src="/images/Logo.png" alt="BDayReminder Logo" width="30" height="30" class="d-inline-block align-text-top mx-4">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Friends" asp-action="Home">BDayReminderMVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon bg-white"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="Friends" asp-action="Index">Friends</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Profile">
                            <i class="bi bi-person-fill text-white"></i>
                        </a>
                    </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
   
    <main>
        <div class="container mt-5 col-8 mb-5">
            <div id="cardCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for (var i = 0; i < Math.Min(9, Model.Count); i += 3)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "") text-center">
                            <div class="row">
                                @for (var j = i; j < Math.Min(i + 3, Model.Count); j++)
                                {
                                    <div class="col-md-4">
                                        <div class="card m-2 d-flex align-content-center justify-content-center">
                                            <img class="w-100 Border" src="http://localhost:5000/images/Photos/@Model[j].Photo" alt="Imagen" style="margin: 0 auto;">
                                            <div class="card-body">
                                                <h5 class="card-title"> @Model[j].FirstName @Model[j].LastName</h5>
                                                
                                                <div class="progress">
                                                    <div id="progressBar" class="progress-bar" style="width: 5%;"></div>
                                                </div>
                                                <p id="dateOfBirth">@Model[j].DateOfBirth </p>
                                                <a class="btn-secondary text-decoration-none rounded-3 px-5 py-2 col-8 details-link"
                                                   data-id="@Model[j].Id" data-bs-toggle="modal" data-bs-target="#detailsModal">
                                                    <i class="bi bi-info-circle-fill"></i> Details
                                                </a>
                                             </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                <button class="carousel-control-prev  col-1" type="button" data-bs-target="#cardCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon text-black" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#cardCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon text-black" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </main>

    <div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Create Friend</h5>
            </div>
            <div class="modal-body" id="detailsModalBody">
                <!-- Aquí se cargará el contenido de la vista "Details" -->
            </div>
            <div class="d-flex justify-content-end col-12 py-4">
                <button class="btn btn-danger mx-5" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
    </div>

    <!-- footer -->
    <footer class=" mt-5">
        <div class="text-center p-3" style="background-color: #272829; color: white;">
            © 2023 - BDayReminder
        </div>
    </footer>
    <!-- Scripts -->
    <script>

        var diasFaltantes = 0;

        function calcularDiasFaltantes() {
            // Obtener las fechas ingresadas por el usuario
            const fechaInicio = new Date(document.getElementById('dateOfBirth').innerText);
            const fechaFin = new Date();
            fechaInicio.setFullYear(fechaFin.getFullYear());

            // Si la fecha de inicio es posterior a la fecha de fin, ajustar el año de la fecha de inicio
            if (fechaFin > fechaInicio) {
                fechaInicio.setFullYear(fechaFin.getFullYear() + 1);
            }

            // Calcular la diferencia en milisegundos entre las dos fechas
            let diferenciaMilisegundos = fechaInicio - fechaFin;

            // Calcular los días faltantes redondeando hacia abajo
            diasFaltantes = Math.floor(diferenciaMilisegundos / (1000 * 60 * 60 * 24));



            if (diasFaltantes == 365) {
                diasFaltantes = 0;
            } else {
                diasFaltantes++;
            }

            // Mostrar el resultado en el DOM
            const resultadoElement = document.getElementById('daysRemaining');
            resultadoElement.textContent = `Faltan ${diasFaltantes} dias para su cumpleaños.`;

            const progres = (diasFaltantes * 100) / 365;
            const progressBar = document.getElementById('progressBar');
            progressBar.style.width = progres + '%';

            console.log(progres);

        }
        // Asignar la función al botón de cálculo
        const calcularButton = document.getElementById('dateOfBirth');
        calcularButton.addEventListener('load', calcularDiasFaltantes);

        // Manejar el evento de clic en los enlaces "Details"
        document.querySelectorAll('.details-link').forEach(link => {
            link.addEventListener('click', function () {
                const friendId = this.getAttribute('data-id');
                const detailsModalBody = document.getElementById('detailsModalBody');

                // Realizar una solicitud AJAX para cargar el contenido de la vista "Details"
                fetch(`/Friends/Details/${friendId}`)
                    .then(response => response.text())
                    .then(data => {
                        detailsModalBody.innerHTML = data;
                    })
                    .catch(error => {
                        console.error('Error loading details:', error);
                    });
            });
        });

       
    </script>
    <style>
        .carousel-control-prev {
            left: -100px; /* Ajusta el valor según sea necesario */
        }

        .carousel-control-next {
            right: -100px; /* Ajusta el valor según sea necesario */
        }
    </style>
    <style>
        .carousel-control-prev,
        .carousel-control-next {
            font-size: 1rem; /* Ajusta el tamaño de fuente según sea necesario */
            width: auto; /* Permitir que el ancho sea automático para que se ajuste al contenido */
            padding: 0.25rem 0.5rem; /* Ajusta el relleno según sea necesario */
        }
    </style>
</body>

