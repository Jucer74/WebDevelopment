@model IEnumerable<BDayReminderMVC.Models.Persona>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PhotoPath)</th>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.PhotoPath" alt="Photo" class="img-thumbnail" style="max-width: 100px;" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td class="text-right">
                    <div class="btn-group">
                        <a class="btn btn-secondary" href="@Url.Action("Edit", new { id = item.Id })">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                        <a class="btn btn-info" href="@Url.Action("Details", new { id = item.Id })">
                            <i class="fa fa-info-circle"></i> Details
                        </a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.Id })">
                            <i class="fa fa-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
