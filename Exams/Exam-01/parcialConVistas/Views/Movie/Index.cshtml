<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Movie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link
        rel="stylesheet"
        href="~/MovieRank.styles.css"
        asp-append-version="true"/>
</head>
<body>
<header>
    <div
        class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <div class="navbar-brand">
                <h1>Movie Crud</h1>
            </div>
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div
                class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a
                            class="nav-link text-dark"
                            asp-area=""
                            asp-controller="Movie"
                            id="listMovie"
                            asp-action="List">
                            Movie List
                        </a>
                    </li>
                    <li class="nav-item">
                        <a
                            class="nav-link text-dark"
                            id="createMovie"
                            asp-area=""
                            asp-controller="Movie"
                            asp-action="Create">
                            Movie Create
                        </a>
                    </li>
                    <li class="nav-item">
                        <a
                            class="nav-link text-dark"
                            id="editMovie"
                            asp-area=""
                            asp-controller="Movie"
                            asp-action="Edit">
                            Movie Edit
                        </a>
                    </li>
                    <li class="nav-item">
                        <a
                            class="nav-link text-dark"
                            id="detailsMovie"
                            asp-area=""
                            asp-controller="Movie"
                            asp-action="Details">
                            Movie Details
                        </a>
                    </li>
                    <li class="nav-item">
                        <a
                            class="nav-link text-dark"
                            id="deleteMovie"
                            asp-area=""
                            asp-controller="Movie"
                            asp-action="Delete">
                            Movie Delete
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>

<!-- Contenedor para cargar vistas parciales -->
<div id="container">
    <!-- Content will be dynamically loaded here -->
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<!-- Script customizado para cargar vistas parciales en el contenedor-->
<script>
    $(document).ready(function () {
        // Carga la vista parcial "List" por defecto
        loadPartialView("/Movie/List");
        
        // Maneja el clic en el enlace "List"
        $("#listMovie").click(function (e) {
            e.preventDefault();
            loadPartialView($(this).attr("href"));
        });
        
        // Maneja el clic en el enlace "Create Movie"
        $("#createMovie").click(function (e) {
            e.preventDefault();
            loadPartialView($(this).attr("href"));
        });

        // Maneja el clic en el enlace "Edit Movie"
        $("#editMovie").click(function (e) {
            e.preventDefault();
            loadPartialView($(this).attr("href"));
        });

        // Maneja el clic en el enlace "Details Movie"
        $("#detailsMovie").click(function (e) {
            e.preventDefault();
            loadPartialView($(this).attr("href"));
        });

        // Maneja el clic en el enlace "Delete Movie"
        $("#deleteMovie").click(function (e) {
            e.preventDefault();
            loadPartialView($(this).attr("href"));
        });

        // Función para cargar una vista parcial en el contenedor
        function loadPartialView(url) {
         fetch(url)
             .then(response => {
                 if (!response.ok) {
                     throw new Error(`Network response was not ok: ${response.status}`);
                 }
                 return response.text();
             })
             .then(data => {
                 document.querySelector("#container").innerHTML = data;
             })
             .catch(error => {
                 console.error("Error fetching data:", error);
                 // Puedes agregar manejo de errores adicional aquí si es necesario
             });
        }
    });
</script>
</body>
</html>