@model MoneyBankMVC.Models.AccountModel

@{
    ViewData["Title"] = "DeleteAccount";
}

<h2>Delete Account</h2>

<p>Are you sure you want to delete this account?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Account Type</dt>
        <dd class="col-sm-10">@Model.AccountType</dd>

        <dt class="col-sm-2">Account Number</dt>
        <dd class="col-sm-10">@Model.AccountNumber</dd>

        <dt class="col-sm-2">Creation Date</dt>
        <dd class="col-sm-10">@Model.CreationDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Owner Name</dt>
        <dd class="col-sm-10">@Model.OwnerName</dd>

        <dt class="col-sm-2">Balance Amount</dt>
        <dd class="col-sm-10">$@Model.BalanceAmount.ToString("N2")</dd>

        <dt class="col-sm-2">Overdraft Amount</dt>
        <dd class="col-sm-10">$@Model.OverdraftAmount.ToString("N2")</dd>
    </dl>
</div>

<form method="post" asp-action="DeleteAccount" asp-route-id="@Model.Id">
    <div class="form-group">
        <label for="confirmation">Type 'DELETE' to confirm</label>
        <input type="text" class="form-control" id="confirmation" name="confirmation" required />
    </div>
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">Delete</button>
    <a asp-action="ListAccounts" class="btn btn-secondary">Cancel</a>
</form>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this account?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-action="DeleteAccount" asp-route-id="@Model.Id">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
