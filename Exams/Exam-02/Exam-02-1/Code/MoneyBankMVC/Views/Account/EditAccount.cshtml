@model MoneyBankMVC.Models.AccountModel

@{
    ViewData["Title"] = "EditAccount";
}

<h2>Edit Account</h2>

<form asp-action="EditAccount">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="AccountType"></label>
        <input asp-for="AccountType" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="AccountNumber"></label>
        <input asp-for="AccountNumber" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="OwnerName"></label>
        <input asp-for="OwnerName" class="form-control" />
        <span asp-validation-for="OwnerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BalanceAmount"></label>
        <input asp-for="BalanceAmount" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="OverdraftAmount"></label>
        <input asp-for="OverdraftAmount" class="form-control" readonly />
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="ListAccounts" class="btn btn-secondary">Cancel</a>
    </div>
</form>
