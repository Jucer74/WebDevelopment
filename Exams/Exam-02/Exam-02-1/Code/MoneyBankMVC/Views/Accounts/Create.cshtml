@model MoneyBankMVC.Models.Account

@{
    ViewData["Title"] = "Crear";
}

<h4>Crear cuenta</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Tipo de Cuenta</label>
                <div class="col-sm-8">
                    <input type="radio" asp-for="AccountType" value="A" id="savings" required checked /> <label for="savings">Ahorros</label>
                    <input type="radio" asp-for="AccountType" value="C" id="current" required /> <label for="current">Corriente</label>
                    <span asp-validation-for="AccountType" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group row mb-3">
                <label asp-for="AccountNumber" class="col-sm-4 col-form-label">Número de Cuenta</label>
                <div class="col-sm-8">
                    <input asp-for="AccountNumber" class="form-control" value="1234567890" />
                    <span asp-validation-for="AccountNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="OwnerName" class="col-sm-4 col-form-label">Nombre del Propietario</label>
                <div class="col-sm-8">
                    <input asp-for="OwnerName" class="form-control" value="Juan Pérez" />
                    <span asp-validation-for="OwnerName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="BalanceAmount" class="col-sm-4 col-form-label">Balance</label>
                <div class="col-sm-8">
                    <input asp-for="BalanceAmount" class="form-control" value="1000.00" />
                    <span asp-validation-for="BalanceAmount" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="OverdraftAmount" class="col-sm-4 col-form-label">Sobregiro</label>
                <div class="col-sm-8">
                    <input asp-for="OverdraftAmount" class="form-control" value="0.00" readonly style="background-color: #e9ecef;" />
                    <span asp-validation-for="OverdraftAmount" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Aceptar" class="btn btn-sm btn-verde mr-2" />
                <a asp-action="Index" class="btn btn-sm btn-gris">Cancelar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}