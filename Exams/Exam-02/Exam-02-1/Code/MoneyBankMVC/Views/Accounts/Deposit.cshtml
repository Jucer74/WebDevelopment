@model MoneyBankMVC.Models.Account

@{
    ViewData["Title"] = "Deposit";
}

<h2>Deposit Funds</h2>

<div>
    <form asp-action="Deposit" asp-controller="Accounts" method="post">
        <input type="hidden" asp-for="Id" /> <!-- Use the account Id obtained in the action -->

        <div class="form-group row mb-3">
            <label for="amount" class="col-sm-4 col-form-label">Deposit Amount</label>
            <div class="col-sm-8">
                <input type="number" id="amount" name="amount" class="form-control" step="0.01" required />
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Deposit</button>
        </div>
    </form>
</div>
