@model MoneyBankMVC.Models.Account

@{
    ViewData["Title"] = "Depositar";
}

<style>
    body {
        text-align: left;
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
    }

    h4 {
        color: #333;
        text-align: center;
        margin-top: 20px;
    }

    .container {
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        padding: 20px;
        margin-top: 20px;
    }

    .form-group label {
        font-weight: bold;
    }

    .btn-accept {
        background-color: #4CAF50;
        color: white;
        border: none;
    }

        .btn-accept:hover {
            background-color: #45a049;
            color: white;
        }

    .btn-cancel {
        background-color: #808080;
        color: white;
        border: none;
    }

        .btn-cancel:hover {
            background-color: #999;
            color: white;
        }

    .form-check-label {
        text-align: left;
    }

    .form-group {
        text-align: left;
    }

    input[type="radio"] {
        margin-right: 5px;
    }
</style>

<div class="container">
    <h4>Depositar</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Depositar" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label>Tipo de Cuenta</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input type="radio" id="savings" name="AccountTypeDisplay" value="A" class="form-check-input" disabled @(Model.AccountType == "A" ? "checked" : "") />
                            <label class="form-check-label" for="savings">Ahorros</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input type="radio" id="current" name="AccountTypeDisplay" value="C" class="form-check-input" disabled @(Model.AccountType == "C" ? "checked" : "") />
                            <label class="form-check-label" for="current">Corriente</label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Fecha de Creación</label>
                    <input asp-for="CreationDate" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label>Número de Cuenta</label>
                    <input asp-for="AccountNumber" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label>Nombre del Propietario</label>
                    <input asp-for="OwnerName" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label>Balance Actual</label>
                    <input asp-for="BalanceAmount" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label for="amount">Valor</label>
                    <input type="number" id="amount" name="amount" class="form-control" step="0.01" required />
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Aceptar" class="btn btn-accept btn-sm mr-2" />
                    <a asp-action="Index" class="btn btn-cancel btn-sm">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
