@model MoneyBankMVC.Models.Accounts

@{
    ViewData["Title"] = "Eliminar Cuenta";
}

<h4>Eliminar Cuenta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-group row mb-3">
            <label class="col-sm-4 col-form-label">Tipo</label>
            <div class="col-sm-8">
                @if (Model.AccountType == "A")
                {
                    <span>Ahorros</span>
                }
                else if (Model.AccountType == "C")
                {
                    <span>Corriente</span>
                }
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-4 col-form-label">Cuenta</label>
            <div class="col-sm-8">
                @Html.DisplayFor(model => model.AccountNumber)
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-4 col-form-label">Propietario</label>
            <div class="col-sm-8">
                @Html.DisplayFor(model => model.OwnerName)
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-4 col-form-label">Balance</label>
            <div class="col-sm-8">
                @Html.DisplayFor(model => model.BalanceAmount)
            </div>
        </div>

        <div class="form-group row mb-3">
            <label class="col-sm-4 col-form-label">Sobregiro</label>
            <div class="col-sm-8">
                @Html.DisplayFor(model => model.OverdraftAmount)
            </div>
        </div>

        <div class="form-group mt-4">
            <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-4">
                <input type="submit" value="Eliminar" class="btn btn-pastel-pink" />
                <a class="btn btn-pastel-gray" asp-action="Index">Cancelar</a>
            </div>
        </form>
        </div>
    </div>
</div>
