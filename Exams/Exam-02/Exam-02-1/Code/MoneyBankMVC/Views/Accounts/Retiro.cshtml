@model MoneyBankMVC.Models.Account

@{
    ViewData["Title"] = "Retiro";
}

<h1>Retiro</h1>

<div>
    <h4>Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OwnerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BalanceAmount)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BalanceAmount)  
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OverdraftAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OverdraftAmount)
        </dd>
    </dl>
</div>
<div>
    <h4>Realizar Retiro</h4>
    <hr />
    <form asp-action="Retiro">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="OverdraftAmount" class="control-label"></label>
            <input asp-for="OverdraftAmount" class="form-control" />
            <span asp-validation-for="OverdraftAmount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Realizar Retiro" class="btn btn-primary" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Volver a la lista</a>
</div>