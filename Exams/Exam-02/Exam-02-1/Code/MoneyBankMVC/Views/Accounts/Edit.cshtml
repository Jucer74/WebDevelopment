@model MoneyBankMVC.Models.Account

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar</h4>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Tipo de Cuenta</label>
                <div class="col-sm-8">
                    <div class="form-check form-check-inline">
                        <input type="radio" id="savings" name="AccountTypeDisplay" value="A" class="form-check-input" disabled @(Model.AccountType == "A" ? "checked" : "") />
                        <label class="form-check-label" for="savings">Ahorros</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="radio" id="current" name="AccountTypeDisplay" value="C" class="form-check-input" disabled @(Model.AccountType == "C" ? "checked" : "") />
                        <label class="form-check-label" for="current">Corriente</label>
                    </div>

                    @if (Model.AccountType == "A")
                    {
                        <input type="hidden" name="AccountType" value="A" />
                    }
                    else
                    {
                        <input type="hidden" name="AccountType" value="C" />
                    }
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="AccountNumber" class="col-sm-4 col-form-label">Cuenta</label>
                <div class="col-sm-4">
                    <input asp-for="AccountNumber" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="OwnerName" class="col-sm-4 col-form-label">Propietario</label>
                <div class="col-sm-8">
                    <input asp-for="OwnerName" class="form-control" />
                    <span asp-validation-for="OwnerName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="BalanceAmount" class="col-sm-4 col-form-label">Balance</label>
                <div class="col-sm-5">
                    <input asp-for="BalanceAmount" class="form-control text-right" readonly />
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="OverdraftAmount" class="col-sm-4 col-form-label">Sobregiro</label>
                <div class="col-sm-5">
                    <input asp-for="OverdraftAmount" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Aceptar" class="btn btn-sm btn-success" />
                <a asp-action="Index" class="btn btn-sm btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
