@model MoneyBankMVC.Models.Account
@{
    ViewData["Title"] = "Edit Account";
}

<h2>Edit Account</h2>

<form asp-action="Edit" asp-controller="Accounts" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="AccountType"></label>
        <input asp-for="AccountType" class="form-control" />
        <span asp-validation-for="AccountType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AccountNumber"></label>
        <input asp-for="AccountNumber" class="form-control" />
        <span asp-validation-for="AccountNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OwnerName"></label>
        <input asp-for="OwnerName" class="form-control" />
        <span asp-validation-for="OwnerName" class="text-danger"></span>
    </div>

    <!-- Add other fields as needed -->

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
