@model IEnumerable<MoneyBankMVC.Models.Account>

@{
    ViewData["Title"] = "Index";
}

<h1>Cuentas</h1>

<p>
    <a asp-action="Create" class="btn btn-sm btn-success text-black">
        <img src="~/images/plus.svg" alt="Create" width="20" height="20">
        Crear
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BalanceAmount)
            </th>
            <th>Operaciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BalanceAmount)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning ">
                        <img src="~/images/pencil.svg" alt="Edit" width="20" height="20">
                    </a>
                    <a asp-action="Deposit" asp-route-id="@item.Id" class="btn btn-sm btn-success">
                        <img src="~/images/box-arrow-in-down.svg" alt="Deposit" width="20" height="20">
                    </a>
                    <a asp-action="Withdraw" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                        <img src="~/images/box-arrow-down.svg" alt="Withdraw" width="20" height="20">
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">
                        <img src="~/images/info.svg" alt="Details" width="20" height="20">
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <img src="~/images/trash.svg" alt="Delete" width="20" height="20">
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
