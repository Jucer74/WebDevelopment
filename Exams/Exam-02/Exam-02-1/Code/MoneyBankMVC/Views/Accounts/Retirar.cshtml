@model MoneyBankMVC.Models.Account

@{
    ViewData["Title"] = "Retirar";
}

<style>
    body {
        text-align: left;
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
    }

    h4 {
        color: #333;
        font-size: 24px;
    }

    .row {
        justify-content: left;
    }

    .col-md-4 {
        margin-left: 20px;
    }

    .form-check-label {
        text-align: left;
    }

    .form-group {
        text-align: left;
    }

    .btn-verde {
        background-color: #4CAF50;
        color: white;
        border: 1px solid #4CAF50;
    }

    .btn-gris {
        background-color: #808080;
        color: white;
        border: 1px solid #808080;
    }

    .btn-verde:hover {
        background-color: #45A049;
        border: 1px solid #45A049;
    }

    .btn-gris:hover {
        background-color: #737373;
        border: 1px solid #737373;
    }
</style>

<h4>Retirar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Retirar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group row mb-3">
                <label class="col-sm-4 col-form-label">Tipo de Cuenta</label>
                <div class="col-sm-8">
                    <div class="form-check form-check-inline">
                        <input type="radio" id="savings" name="AccountTypeDisplay" value="A" class="form-check-input" disabled @(Model.AccountType == "A" ? "checked" : "") />
                        <label class="form-check-label" for="savings">Ahorros</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="radio" id="current" name="AccountTypeDisplay" value="C" class="form-check-input" disabled @(Model.AccountType == "C" ? "checked" : "") />
                        <label class="form-check-label" for="current">Corriente</label>
                    </div>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="CreationDate" class="col-sm-4 col-form-label">Fecha de Creación</label>
                <div class="col-sm-8">
                    <input asp-for="CreationDate" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="AccountNumber" class="col-sm-4 col-form-label">Número de Cuenta</label>
                <div class="col-sm-8">
                    <input asp-for="AccountNumber" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="OwnerName" class="col-sm-4 col-form-label">Nombre del Propietario</label>
                <div class="col-sm-8">
                    <input asp-for="OwnerName" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="BalanceAmount" class="col-sm-4 col-form-label">Balance Actual</label>
                <div class="col-sm-8">
                    <input asp-for="BalanceAmount" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row mb-3">
                <label for="amount" class="col-sm-4 col-form-label">Valor</label>
                <div class="col-sm-8">
                    <input type="number" id="amount" name="amount" class="form-control" step="0.01" required />
                </div>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Aceptar" class="btn btn-sm btn-verde mr-2" />
                <a asp-action="Index" class="btn btn-sm btn-gris">Cancelar</a>
            </div>
        </form>
    </div>
</div>
