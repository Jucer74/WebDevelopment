@model MoneyBankMVC.Models.Transaction

@{
    ViewData["Title"] = "Deposit";
}

<h1>Deposit</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Deposit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AccountType)
        </dt>
        <dd class="col-sm-10">
                @if (Model.AccountType == 'A')
                {
                <label class="radio-inline">
                    <input type="radio" disabled checked /> Ahorros
                </label>
                <label class="radio-inline">
                    <input type="radio" disabled /> Corriente
                </label>
                }
                else if (Model.AccountType == 'C')
                {
                <label class="radio-inline">
                    <input type="radio" disabled /> Ahorros
                </label>
                <label class="radio-inline">
                    <input type="radio" disabled checked /> Corriente
                </label>
                }
        </dd>
        
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AccountNumber)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OwnerName)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OwnerName)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BalanceAmount)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BalanceAmount)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OverdraftAmount)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OverdraftAmount)
        </dd>
            <div class="form-group">
                <label asp-for="ValueAmount" class="control-label">Valor</label>
                <input asp-for="ValueAmount" class="form-control" />
                <span asp-validation-for="ValueAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
