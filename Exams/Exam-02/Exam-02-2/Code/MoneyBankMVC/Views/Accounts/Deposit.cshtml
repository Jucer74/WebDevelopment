@model MoneyBankMVC.Models.Transaction

@{
    ViewData["Title"] = "Deposit";
}

<h1>Deposit</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Deposit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Id" />

            <div class="form-group d-flex  mb-2">
                <label asp-for="AccountType" class="control-label">Tipo</label>
                <div class="form-check  ms-2">
                    <input asp-for="AccountType" class="form-check-input" type="radio" value="C" id="corrienteRadio" name="AccountType" />
                    <label class="form-check-label" for="corrienteRadio">Corriente</label>
                </div>

                <div class="form-check ms-2">
                    <input asp-for="AccountType" class="form-check-input" type="radio" value="A" id="ahorrosRadio" name="AccountType" />
                    <label class="form-check-label" for="ahorrosRadio">Ahorros</label>
                </div>

                <span asp-validation-for="AccountType" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="CreationDate" class="control-label"></label>
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <input asp-for="AccountNumber" class="form-control" readonly="readonly">
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerName" class="control-label"></label>
                <input asp-for="OwnerName" class="form-control" readonly="readonly">
                <span asp-validation-for="OwnerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BalanceAmount" class="control-label"></label>
                <input asp-for="BalanceAmount" class="form-control" readonly="readonly">
                <span asp-validation-for="BalanceAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OverdraftAmount" class="control-label"></label>
                <input asp-for="OverdraftAmount" class="form-control" readonly="readonly">
                <span asp-validation-for="OverdraftAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValueAmount" class="control-label"></label>
                <input asp-for="ValueAmount" class="form-control" />
                <span asp-validation-for="ValueAmount" class="text-danger"></span>
            </div>
            <div class="d-flex">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

                <div class="form-group ms-2">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
