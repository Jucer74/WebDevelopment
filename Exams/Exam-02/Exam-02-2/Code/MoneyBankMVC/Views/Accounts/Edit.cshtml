@model Account

@{
    ViewData["Title"] = "Edit";
}



<h4>Editar Cuenta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group row">
                <label asp-for="AccountType" class=" col-3 control-label"></label>
                <div class="col-9 row">
                    <div class="col-6">
                        <div class="form-check form-check-inline">
                            <input asp-for="AccountType" value='A' type="radio" class="form-check-input " name="AccountType" disabled >
                            <label class="form-check-label">Ahorros</label>
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="form-check form-check-inline">
                            <input asp-for="AccountType" value='C' type="radio" class="form-check-input " name="AccountType" disabled >
                            <label class="form-check-label">Corriente</label>
                        </div>
                    </div>
                </div>
                <input asp-for="AccountType" type="hidden" />
                <span asp-validation-for="AccountType" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <input asp-for="AccountNumber" class="form-control" readonly />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerName" class="control-label"></label>
                <input asp-for="OwnerName" class="form-control" />
                <span asp-validation-for="OwnerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BalanceAmount" class="control-label"></label>
                <input asp-for="BalanceAmount" class="form-control" readonly />
                <span asp-validation-for="BalanceAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OverdraftAmount" class="control-label"></label>
                <input asp-for="OverdraftAmount" class="form-control" readonly />
                <span asp-validation-for="OverdraftAmount" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <input type="submit" value="Aceptar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
</form>
</div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
