@model MoneyBankMVC.Models.Account

@{
    ViewData["Title"] = "Create";
}

<h1>Crear cuenta</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group d-flex">
                <label asp-for="AccountType" class="control-label">Tipo de Cuenta:</label>
                <div class="form-check">
                    <input asp-for="AccountType" class="form-check-input" type="radio" value="A" id="ahorro" name="AccountType">
                    <label class="form-check-label" for="ahorro">Ahorro</label>
                </div>
                <div class="form-check">
                    <input asp-for="AccountType" class="form-check-input" type="radio" value="C" id="corriente" name="AccountType" checked>
                    <label class="form-check-label" for="corriente">Corriente</label>
                </div>
                
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>
            <div class="form-group d-flex">
                <label asp-for="AccountNumber" class="control-label"></label>
                <input asp-for="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group d-flex">
                <label asp-for="OwnerName" class="control-label"></label>
                <input asp-for="OwnerName" class="form-control" />
                <span asp-validation-for="OwnerName" class="text-danger"></span>
            </div>
            <div class="form-group d-flex">
                <label asp-for="BalanceAmount" class="control-label"></label>
                <input asp-for="BalanceAmount" class="form-control" />
                <span asp-validation-for="BalanceAmount" class="text-danger"></span>
            </div>
            <div class="form-group d-flex">
                <label asp-for="OverdraftAmount" class="control-label"></label>
                <input asp-for="OverdraftAmount" class="form-control" />
                <span asp-validation-for="OverdraftAmount" class="text-danger"></span>
            </div>

            <div class="d-flex">

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>

                <div>
                    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                </div>

            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
