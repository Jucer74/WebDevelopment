@model MoneyBankMVC.Models.Account

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h4 class="mt-5">Crear cuenta</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row mb-3">
                    <label class="col-sm-4 col-form-label">Tipo:</label>
                    <div class="col-sm-8">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="AccountType" value="A" id="savings" required checked />
                            <label class="form-check-label" for="savings">Ahorros</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="AccountType" value="C" id="current" required />
                            <label class="form-check-label" for="current">Corriente</label>
                        </div>
                        <span asp-validation-for="AccountType" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="AccountNumber" class="col-sm-4 col-form-label">Cuenta:</label>
                    <div class="col-sm-8">
                        <input asp-for="AccountNumber" class="form-control" value="1234567890" required />
                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="OwnerName" class="col-sm-4 col-form-label">Propietario:</label>
                    <div class="col-sm-8">
                        <input asp-for="OwnerName" class="form-control" value="John Alexander Doe Carter" required />
                        <span asp-validation-for="OwnerName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="BalanceAmount" class="col-sm-4 col-form-label">Balance:</label>
                    <div class="col-sm-8">
                        <input asp-for="BalanceAmount" class="form-control" required />
                        <span asp-validation-for="BalanceAmount" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="OverdraftAmount" class="col-sm-4 col-form-label">Sobregiro:</label>
                    <div class="col-sm-8">
                        <input asp-for="OverdraftAmount" class="form-control" value="0.00" readonly style="background-color: #e9ecef;" />
                        <span asp-validation-for="OverdraftAmount" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success mr-2">Aceptar</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
