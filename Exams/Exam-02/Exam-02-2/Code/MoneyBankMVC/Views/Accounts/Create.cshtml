@model MoneyBankMVC.Models.Account

@{
    ViewData["Title"] = "Create";
}
<style>
    /* Clases personalizadas para radio botones y etiquetas */
    .custom-radio-input:checked + .custom-radio-label::before {
        /* Cambia el color del círculo a verde cuando está seleccionado */
        background-color: #28a745 !important;
    }

    .custom-radio-label {
        /* Cambia el color del texto a verde */
        color: #28a745;
        
    }
</style>
<div class="container">
    <h2 class="mt-5">Crear cuenta</h2>
    <hr />
    <div class="row">
        <div class="col-lg-8">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row mb-3">
                    <label class="col-sm-4 col-form-label">Tipo de Cuenta</label>
                    <div class="col-sm-8">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input custom-radio-input" type="radio" asp-for="AccountType" value="A" id="savings" required checked />
                            <label class="form-check-label custom-radio-label" for="savings">Ahorros</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input custom-radio-input" type="radio" asp-for="AccountType" value="C" id="current" required />
                            <label class="form-check-label custom-radio-label" for="current">Corriente</label>
                        </div>
                        <span asp-validation-for="AccountType" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="AccountNumber" class="col-sm-4 col-form-label">Número de Cuenta</label>
                    <div class="col-sm-8">
                        <input asp-for="AccountNumber" class="form-control" value="0987654321" required />
                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="OwnerName" class="col-sm-4 col-form-label">Nombre del Propietario</label>
                    <div class="col-sm-8">
                        <input asp-for="OwnerName" class="form-control" value="Andres Felipe Araujo" required />
                        <span asp-validation-for="OwnerName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="BalanceAmount" class="col-sm-4 col-form-label">Balance</label>
                    <div class="col-sm-8">
                        <input asp-for="BalanceAmount" class="form-control" required />
                        <span asp-validation-for="BalanceAmount" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="OverdraftAmount" class="col-sm-4 col-form-label">Sobregiro</label>
                    <div class="col-sm-8">
                        <input asp-for="OverdraftAmount" class="form-control" value="0.00" readonly style="background-color: lightblue;" />
                        <span asp-validation-for="OverdraftAmount" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary mr-2" style="background-color: #28a745; color: #fff;">Aceptar</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
