@model MoneyBankMVC.Models.Account

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Cuenta</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label font-weight-bold">Tipo de Cuenta:</label>
                <div class="col-sm-8">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="AccountType" value="Ahorros" id="ahorrosRadio" checked>
                        <label class="form-check-label" for="ahorrosRadio">Cuenta de Ahorros</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="AccountType" value="Corriente" id="corrienteRadio">
                        <label class="form-check-label" for="corrienteRadio">Cuenta Corriente</label>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="AccountNumber" class="col-sm-4 col-form-label font-weight-bold">Número de Cuenta:</label>
                <div class="col-sm-8">
                    <input asp-for="AccountNumber" class="form-control" />
                    <span asp-validation-for="AccountNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="OwnerName" class="col-sm-4 col-form-label font-weight-bold">Propietario:</label>
                <div class="col-sm-8">
                    <input asp-for="OwnerName" class="form-control" />
                    <span asp-validation-for="OwnerName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="BalanceAmount" class="col-sm-4 col-form-label font-weight-bold">Balance:</label>
                <div class="col-sm-8">
                    <input asp-for="BalanceAmount" class="form-control" />
                    <span asp-validation-for="BalanceAmount" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="OverdraftAmount" class="col-sm-4 col-form-label font-weight-bold">Sobregiro:</label>
                <div class="col-sm-8">
                    <input asp-for="OverdraftAmount" class="form-control" />
                    <span asp-validation-for="OverdraftAmount" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-4">
                <div class="offset-sm-4 col-sm-8">
                    <button type="submit" class="btn btn-success">Aceptar</button>
                    <a asp-action="Index" class="btn btn-outline-secondary ml-2">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>


