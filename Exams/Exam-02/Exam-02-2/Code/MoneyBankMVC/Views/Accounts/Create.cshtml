@model MoneyBankMVC.Models.Account

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountType" class="control-label">Tipo:</label>
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="AccountType" value="A" class="form-check-input" />
                    <label class="form-check-label">Ahorros</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" asp-for="AccountType" value="C" class="form-check-input" />
                    <label class="form-check-label">Corriente</label>
                </div>
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>
                <span asp-validation-for="Id" class="text-danger"></span>
            
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label">Cuenta</label>
                <input asp-for="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerName" class="control-label">Propietario</label>
                <input asp-for="OwnerName" class="form-control" />
                <span asp-validation-for="OwnerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BalanceAmount" class="control-label">Balance</label>
                <input asp-for="BalanceAmount" class="form-control" />
                <span asp-validation-for="BalanceAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OverdraftAmount" class="control-label">Sobregiro</label>
                <input asp-for="OverdraftAmount" class="form-control" />
                <span asp-validation-for="OverdraftAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
