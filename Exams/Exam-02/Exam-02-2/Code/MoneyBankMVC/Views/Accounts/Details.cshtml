@model MoneyBankMVC.Models.Account

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountType)
        </dt>
        <dd class="col-sm-10">
            @if (Model.AccountType == 'A')
            {
                <label class="radio-inline">
                    <input type="radio" disabled checked /> Ahorros
                </label>
                <label class="radio-inline">
                    <input type="radio" disabled /> Corriente
                </label>
            }
            else if (Model.AccountType == 'C')
            {
                <label class="radio-inline">
                    <input type="radio" disabled /> Ahorros
                </label>
                <label class="radio-inline">
                    <input type="radio" disabled checked /> Corriente
                </label>
            }
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OwnerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BalanceAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BalanceAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OverdraftAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OverdraftAmount)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.Id"><i class="bi bi-pencil-fill"></i> Editar</a> |

    
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</div>
