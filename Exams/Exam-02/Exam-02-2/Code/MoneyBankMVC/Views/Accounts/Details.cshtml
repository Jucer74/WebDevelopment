@model MoneyBankMVC.Models.Account

@{
    ViewData["Title"] = "Details";
}

<h1>Información cuenta</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountType)
        </dt>
        <dd class="col-sm-10">
            @{
                string accountTypeName = Model.AccountType == 'A' ? "Ahorro" : Model.AccountType == 'C' ? "Corriente" : "";
            }
            @accountTypeName
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OwnerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BalanceAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BalanceAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OverdraftAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OverdraftAmount)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.Id">Aceptar</a>
    <a class="ms-3 btn btn-secondary" asp-action="Index">Cancelar</a>
</div>
