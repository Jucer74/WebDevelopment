@model MoneyBankMVC.Models.Account

@{
    ViewData["Title"] = "Crear";
}

<div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
    <div style="width: 400px;">
        <h4 style="text-align: center;">Crear cuenta</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="text-align: center;"></div>

            <div class="form-group mb-3">
                <label>Tipo de Cuenta</label>
                <div>
                    <input type="radio" asp-for="AccountType" value="A" id="savings" required checked /> <label for="savings">Ahorros</label>
                    <input type="radio" asp-for="AccountType" value="C" id="current" required /> <label for="current">Corriente</label>
                    <span asp-validation-for="AccountType" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AccountNumber">Número de Cuenta</label>
                <input asp-for="AccountNumber" class="form-control" value="1234567890" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="OwnerName">Nombre del Propietario</label>
                <input asp-for="OwnerName" class="form-control" value="Juan Camilo" />
                <span asp-validation-for="OwnerName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="BalanceAmount">Balance</label>
                <input asp-for="BalanceAmount" class="form-control" value="1000.00" />
                <span asp-validation-for="BalanceAmount" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="OverdraftAmount">Sobregiro</label>
                <input asp-for="OverdraftAmount" class="form-control" value="0.00" readonly style="background-color: #e9ecef;" />
                <span asp-validation-for="OverdraftAmount" class="text-danger"></span>
            </div>

            <div class="form-group" style="text-align: center;">
                <input type="submit" value="Aceptar" class="btn btn-sm btn-verde mr-2" />
                <a asp-action="Index" class="btn btn-sm btn-gris">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
